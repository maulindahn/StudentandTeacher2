<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/custom_student"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin">

    <TextView
        android:id="@+id/no"
        android:text="No. :"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:layout_margin="10dp"/>

    <EditText
        android:id="@+id/edit_no"
        android:hint="Nomor"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:layout_margin="8dp"
        android:layout_toRightOf="@+id/no"/>

    <TextView
        android:id="@+id/noreg"
        android:text="No. Reg :"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:layout_margin="10dp"
        android:layout_below="@+id/no"/>

    <EditText
        android:id="@+id/edit_noreg"
        android:hint="Nomor Registrasi"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:layout_margin="8dp"
        android:layout_toRightOf="@+id/noreg"
        android:layout_below="@+id/edit_no"/>

    <TextView
        android:id="@+id/nama"
        android:text="Nama :"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:layout_margin="10dp"
        android:layout_below="@+id/noreg"/>

    <EditText
        android:id="@+id/edit_nama"
        android:hint="Nama Siswa"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:layout_margin="8dp"
        android:layout_toRightOf="@+id/nama"
        android:layout_below="@+id/edit_noreg"/>

    <TextView
        android:id="@+id/mail"
        android:text="E-Mail :"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:layout_margin="10dp"
        android:layout_below="@+id/nama"/>

    <EditText
        android:id="@+id/edit_mail"
        android:hint="Email"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:layout_margin="10dp"
        android:layout_toRightOf="@+id/mail"
        android:layout_below="@+id/edit_nama"/>

    <TextView
        android:id="@+id/phone"
        android:text="Phone :"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:layout_margin="10dp"
        android:layout_below="@+id/mail"/>

    <EditText
        android:id="@+id/edit_phone"
        android:hint="Nomor Telepon"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:layout_margin="10dp"
        android:layout_toRightOf="@+id/phone"
        android:layout_below="@+id/edit_mail"/>

    <android.support.design.widget.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        app:fabSize="mini"
        app:srcCompat="@drawable/ic_clear_black_24dp"
        android:id="@+id/button_Cancel"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_margin="24dp"
        />

    <android.support.design.widget.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        app:fabSize="mini"
        app:srcCompat="@drawable/ic_done_black_24dp"
        android:id="@+id/button_Done"
        android:layout_alignBottom="@id/button_Cancel"
        android:layout_toLeftOf="@id/button_Cancel"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignTop="@+id/button_Cancel"
        android:layout_alignParentStart="true"
        android:layout_marginStart="75dp"></RelativeLayout>

</RelativeLayout>
